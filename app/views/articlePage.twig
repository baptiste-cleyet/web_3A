{% extends "head.twig" %} {% block stylesheets %}
<link rel="stylesheet" href="static/css/articlePage.css" />
{% endblock stylesheets %} {% block content %}
<div class="blog-post">
	<h2 class="blog-post-title">{{ article.titre }}</h2>
	<p class="blog-post-meta">
		{{ article.date_creation }} par {{ auteur.nom_utilisateur }}

		<br />Mis Ã  jour le {{ article.date_mise_a_jour }}
	</p>

	<p>
		{% apply markdown_to_html %}
		{{ article.contenu }}
		{% endapply %}
	</p>

	<div>
		<br />
		<br />
		<hr />
		<h6>Tags</h6>
		{% set tags_names = [] %} {% for tag in tags %} {% set tags_names =
		tags_names|merge([tag.nom_tag]) %} {% endfor %}
		{{ tags_names|join(' - ') }}
	</div>
</div>
{% endblock content %}
