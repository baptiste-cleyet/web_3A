<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{{ titre_doc }}</title>
		<meta charset="UTF-8" />
		<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet" />
		<script src="bootstrap/js/bootstrap.bundle.min.js"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="static/css/articlesList.css" />
		<link rel="icon" href="static/img/icone.png" />
	</head>

	<header class="text-center">
		{% if username %}
		<div class="text-center pt-2">
			<h2>Bienvenue {{ username }} !</h2>
		</div>
		{% else %}
		<div class="text-center pt-2"><h2>Bienvenue invit√© !</h2></div>
		{% endif %}
	</header>
	<body>
		<div class="album py-5 bg-light">
			<div class="container">
				<div class="row">
					{% for article in articlesList %}
					<div class="col-md-4">
						<div class="card mb-4 shadow-sm">
							{% if article.image_une != null %}
							<img
								class="card-img-top"
								src="static/img/
									{{ article.image_une }}"
								alt="Article"
							/>
							{% else %}
							<img
								class="card-img-top"
								src="static/img/empty_article.jpg"
								alt="Article"
							/>
							{% endif %}
							<div class="card-body">
								<p class="card-text">
									{{ article.titre }}
								</p>
								<div
									class="d-flex justify-content-between align-items-center"
								>
									<a
										type="button"
										data-mdb-button-init
										data-mdb-ripple-init
										class="btn btn-outline-primary"
										href="app.php?route=article&id={{
											article.id
										}}"
									>
										Voir
									</a>
								</div>
							</div>
						</div>
					</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</body>
</html>
