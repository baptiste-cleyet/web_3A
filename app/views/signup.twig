<html>
<head>
    <title>{{ titre_doc }}</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="static/css/signupLogin.css" />
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="bootstrap/js/bootstrap.bundle.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="static/img/icone.png" />
</head>
{% if error %}
    <div class="alert alert-danger">{{ error }}</div>
{% endif %}
<body class="text-center">

<form action="app.php?route=signup" class="form-signin" method="POST">
    <p>Créez un compte</p>

    <div data-mdb-input-init class="form-outline mb-4">
        <input
                type="email"
                name="email"
                id="form2Example11"
                class="form-control"
                placeholder="Adresse mail"
        />
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
        <input
                type="text"
                name="username"
                id="form2Example11"
                class="form-control"
                placeholder="Nom d'utilisateur"
        />
    </div>


    <div data-mdb-input-init class="form-outline mb-4">
        <input
                type="password"
                name="password1"
                id="form2Example22"
                class="form-control"
                placeholder="Mot de passe"
        />
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
        <input
                type="password"
                name="password2"
                id="form2Example22"
                class="form-control"
                placeholder="Confirmez le mot de passe"
        />
    </div>


    <div class="text-center pt-1 mb-5 pb-1">
        <button
                data-mdb-button-init
                data-mdb-ripple-init
                class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
                type="submit"
        >
            S'inscire
        </button>
    </div>

    <div
            class="d-flex align-items-center justify-content-center pb-4"
    >
        <p class="mb-0 me-2">Vous avez déjà compte?</p>
        <a
                type="button"
                data-mdb-button-init
                data-mdb-ripple-init
                class="btn btn-outline-danger"
                href="app.php?route=login"
        >
            Se connecter
        </a>
    </div>
</form>
</body>
</main>
</html>
