{% extends "head.twig" %}
{% block stylesheets %}
{% endblock %}

{% block content %}
    <div x-data="{ openAddModal: false }" x-cloak>
        <div class="container mt-4">
            <button class="btn btn-primary" @click="openAddModal = true">
                <i class="bi bi-plus-circle"></i> Rédiger un nouvel article
            </button>
        </div>

        <div class="modal" tabindex="-1" x-show="openAddModal" style="display: block; background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-scrollable modal-xl" style="max-width: 80%; width: 80%;" @click.away="openAddModal = false">

                <form action="app.php?action=newArticle" method="POST" enctype="multipart/form-data">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Rédiger un nouvel article</h5>
                            <button type="button" class="btn-close" @click="openAddModal = false"></button>
                        </div>

                        <input type="hidden" value="{{ user_id }}" name="id"/>

                        <div class="modal-body" x-data="{ content: '' }">
                            <div class="mb-3">
                                <label class="form-label">Titre</label>
                                <textarea class="form-control" name="titre" rows="2" required></textarea>
                            </div>
                            <hr>
                            <div class="mb-3">
                                <label class="form-label">Image de l'article</label><br>
                                <input type="file" name="file" class="form-control" accept="image/png, image/jpeg">
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-12 col-lg-6 mb-3">
                                    <label class="form-label">Contenu (Markdown)</label>
                                    <textarea class="form-control" name="contenu" rows="15" required x-model="content" placeholder="Écrivez ici..."></textarea>
                                </div>
                                <div class="col-12 col-lg-6 mb-3">
                                    <label class="form-label text-muted"><i class="bi bi-eye"></i> Aperçu du résultat</label>
                                    <div class="border rounded p-3" style="min-height: 380px;" x-html="content ? marked.parse(content) : '<em class=\'text-muted\'>L\'aperçu s\'affichera ici...</em>'"></div>
                                </div>
                            </div>
                            <hr>
                            <div class="mb-3" x-data="{ selectedTags: [] }">
                                <label class="form-label">Tags associés</label>
                                <div class="d-flex flex-wrap gap-2">
                                    {% for tag in tagsList %}
                                        <span class="badge rounded-pill cursor-pointer user-select-none" style="cursor: pointer; transition: all 0.2s;" :class="selectedTags.includes({{ tag.id }}) ? 'bg-primary text-white border-primary' : 'bg-transparent text-secondary border border-secondary'" @click="if(selectedTags.includes({{ tag.id }})) { selectedTags = selectedTags.filter(id => id !== {{ tag.id }}) } else { selectedTags.push({{ tag.id }}) }">
                                        <i x-show="selectedTags.includes({{ tag.id }})" class="bi bi-check-lg me-1"></i>
                                        {{ tag.nom_tag }}
                                        </span>
                                    {% endfor %}
                                </div>
                                <template x-for="tagId in selectedTags">
                                    <input type="hidden" name="tags[]" :value="tagId">
                                </template>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @click="openAddModal = false">Annuler</button>
                            <button type="submit" name="etat" value="brouillon" class="btn btn-warning text-white"><i class="bi bi-save"></i> Sauvegarder en brouillon</button>
                            <button type="submit" name="etat" value="publie" class="btn btn-primary"><i class="bi bi-send"></i> Publier maintenant</button>
                        </div>
                    </div>
                </form> </div>
        </div>
    </div>

    <br><hr>

    <h1 class="px-5">Brouillons</h1>

    <div class="album py-5">
        <div class="container">
            <div class="row">
                {% for article in articlesList %}
                    {% if article.statut == 'Brouillon' %}

                        <div class="col-6 col-sm-4 col-md-3" x-data="{ openEditModal: false }" x-cloak>
                            <div class="card mb-4 shadow-sm">
                                {% if article.image_une != null %}
                                    <img class="card-img-top" src="static/img/{{ article.image_une }}" alt="Article" style="height: 200px; object-fit: cover;"/>
                                {% else %}
                                    <img class="card-img-top" src="static/img/empty_article.jpg" alt="Article" style="height: 200px; object-fit: cover;"/>
                                {% endif %}
                                <div class="card-body">
                                    <p class="card-text fw-bold text-truncate">{{ article.titre }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a type="button" class="btn btn-sm btn-outline-success" href="app.php?action=postDraft&article&id={{ article.id }}">Publier</a>
                                        <button class="btn btn-sm btn-outline-warning" @click="openEditModal = true">Éditer</button>
                                        <a type="button" class="btn btn-sm btn-outline-danger" href="app.php?action=deleteDraft&id={{ article.id }}">Supprimer</a>
                                    </div>
                                </div>
                            </div>

                            <div class="modal" tabindex="-1" x-show="openEditModal" style="display: block; background-color: rgba(0,0,0,0.5);">
                                <div class="modal-dialog modal-dialog-scrollable modal-xl" style="width:80%; max-width: 80%" @click.away="openEditModal = false">

                                    <form action="app.php?action=editDraft" method="POST" enctype="multipart/form-data">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Modifier le brouillon</h5>
                                                <button type="button" class="btn-close" @click="openEditModal = false"></button>
                                            </div>

                                            <input type="hidden" value="{{ article.id }}" name="id_article"/>

                                            <div class="modal-body" x-data="{ content: {{ article.contenu|json_encode }} }">
                                                <div class="mb-3">
                                                    <label class="form-label">Titre</label>
                                                    <textarea class="form-control" name="titre" rows="2" required>{{ article.titre }}</textarea>
                                                </div>
                                                <hr>
                                                <div class="mb-3">
                                                    <label class="form-label">Modifier l'image</label><br>
                                                    {% if article.image_une is defined and article.image_une is not null %}
                                                        <div class="d-flex align-items-center mb-2 gap-3 p-2 border rounded">
                                                            <img src="static/img/{{ article.image_une }}" alt="Actuelle" style="height: 60px; border-radius: 4px;">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="delete_image" value="1" id="delImg{{ article.id }}">
                                                                <label class="form-check-label text-danger cursor-pointer" for="delImg{{ article.id }}">
                                                                    <i class="bi bi-trash"></i> Supprimer l'image actuelle
                                                                </label>
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                    <input type="file" name="file" class="form-control" accept="image/png, image/jpeg">
                                                    <div class="form-text text-muted">Laisser vide pour conserver l'image actuelle.</div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-12 col-lg-6 mb-3">
                                                        <label class="form-label">Contenu (Markdown)</label>
                                                        <textarea class="form-control" name="contenu" rows="15" required x-model="content"></textarea>
                                                    </div>
                                                    <div class="col-12 col-lg-6 mb-3">
                                                        <label class="form-label text-muted"><i class="bi bi-eye"></i> Aperçu du résultat</label>
                                                        <div class="border rounded p-3" style="min-height: 380px;" x-html="content ? marked.parse(content) : '<em class=\'text-muted\'>L\'aperçu s\'affichera ici...</em>'"></div>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="mb-3" x-data="{ selectedTags: {{ article.tags_ids|json_encode|default('[]') }} }">
                                                    <label class="form-label">Tags associés</label>
                                                    <div class="d-flex flex-wrap gap-2">
                                                        {% for tag in tagsList %}
                                                            <span class="badge rounded-pill cursor-pointer user-select-none" style="cursor: pointer; transition: all 0.2s;" :class="selectedTags.includes({{ tag.id }}) ? 'bg-primary text-white border-primary' : 'bg-transparent text-secondary border border-secondary'" @click="if(selectedTags.includes({{ tag.id }})) { selectedTags = selectedTags.filter(id => id !== {{ tag.id }}) } else { selectedTags.push({{ tag.id }}) }">
                                                                <i x-show="selectedTags.includes({{ tag.id }})" class="bi bi-check-lg me-1"></i>
                                                                {{ tag.nom_tag }}
                                                            </span>
                                                        {% endfor %}
                                                    </div>
                                                    <template x-for="tagId in selectedTags">
                                                        <input type="hidden" name="tags[]" :value="tagId">
                                                    </template>
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" @click="openEditModal = false">Annuler</button>
                                                <button type="submit" name="etat" value="brouillon" class="btn btn-warning text-white"><i class="bi bi-save"></i> Sauvegarder</button>
                                                <button type="submit" name="etat" value="publie" class="btn btn-primary"><i class="bi bi-send"></i> Publier</button>
                                            </div>
                                        </div>
                                    </form> </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <hr>
    <h1 class="px-5">Articles publiés</h1>
    <div class="album py-5">
        <div class="container">
            <div class="row">
                {% for article in articlesList %}
                    {% if article.statut=='Publié' %}
                        <div class="col-6 col-sm-4 col-md-3">
                            <div class="card mb-4 shadow-sm">
                                {% if article.image_une != null %}
                                    <img class="card-img-top" src="static/img/{{ article.image_une }}" alt="Article" style="height: 200px; object-fit: cover;"/>
                                {% else %}
                                    <img class="card-img-top" src="static/img/empty_article.jpg" alt="Article" style="height: 200px; object-fit: cover;"/>
                                {% endif %}
                                <div class="card-body">
                                    <p class="card-text fw-bold text-truncate">{{ article.titre }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a type="button" class="btn btn-sm btn-outline-primary" href="app.php?route=article&id={{ article.id }}">Voir</a>
                                        <a type="button" class="btn btn-sm btn-outline-danger" href="app.php?action=archiveArticle&id={{ article.id }}">Archiver</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <hr>
    <h1 class="px-5">Articles archivés</h1>
    <div class="album py-5">
        <div class="container">
            <div class="row">
                {% for article in articlesList %}
                    {% if article.statut=='Archivé' %}
                        <div class="col-6 col-sm-4 col-md-3">
                            <div class="card mb-4 shadow-sm">
                                {% if article.image_une != null %}
                                    <img class="card-img-top" src="static/img/{{ article.image_une }}" alt="Article" style="height: 200px; object-fit: cover;"/>
                                {% else %}
                                    <img class="card-img-top" src="static/img/empty_article.jpg" alt="Article" style="height: 200px; object-fit: cover;"/>
                                {% endif %}
                                <div class="card-body">
                                    <p class="card-text fw-bold text-truncate">{{ article.titre }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a type="button" class="btn btn-sm btn-outline-primary" href="app.php?route=article&id={{ article.id }}">Voir</a>
                                        <a type="button" class="btn btn-sm btn-outline-success" href="app.php?action=restoreArticle&id={{ article.id }}">Restaurer</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}